@model TimeKeeping_Demo.Models.ChinhSachNghiPhep

@{
	ViewData["Title"] = "Create a new timeoff policy";
}

<h4>Create a new timeoff policy</h4>
<hr />
<div class="row">
	<div class="col-md-12">
		<form asp-action="Create">
			<div asp-validation-summary="ModelOnly" class="alert-danger"></div>
			<div class="form-group row">
				<div class="col-4">
					<label asp-for="MaChinhSachNghiPhep" class="control-label h5 text-secondary"></label>
				</div>
				<div class="col-5">
					<input asp-for="MaChinhSachNghiPhep" class="form-control" />
					<span asp-validation-for="MaChinhSachNghiPhep" class="alert-danger"></span>
				</div>
			</div>
			<div class="form-group row">
				<div class="col-4">
					<label asp-for="TenChinhSach" class="control-label h5 text-secondary"></label>
				</div>
				<div class="col-5">
					<input asp-for="TenChinhSach" class="form-control" />
					<span asp-validation-for="TenChinhSach" class="alert-danger"></span>
				</div>
			</div>
			<div class="form-group row">
				<div class="col-4">
					<label asp-for="MaLoaiChinhSach" class="control-label h5 text-secondary"></label>
				</div>
				<div class="col-5">
					<select asp-for="MaLoaiChinhSach" class="form-control" asp-items="ViewBag.TypeOfPolicyID"></select>
				</div>
			</div>
			<div class="form-group row">
				<div class="col-4">
					<label asp-for="SoLuongPhepChuanNam" class="control-label h5 text-secondary"></label>
				</div>
				<div class="col-5">
					<input asp-for="SoLuongPhepChuanNam" class="form-control" />
					<span asp-validation-for="SoLuongPhepChuanNam" class="alert-danger"></span>
				</div>
			</div>
			<div class="form-group row">
				<div class="col-4">
					<label asp-for="SoLuongPhepTon" class="control-label h5 text-secondary"></label>
				</div>
				<div class="col-5">
					<input asp-for="SoLuongPhepTon" class="form-control" />
					<span asp-validation-for="SoLuongPhepTon" class="alert-danger"></span>
				</div>
			</div>
			<div class="form-group row">
				<div class="col-4">
					<label asp-for="MoTa" class="control-label h5 text-secondary"></label>
				</div>
				<div class="col-5">
					<input asp-for="MoTa" class="form-control" />
					<span asp-validation-for="MoTa" class="alert-danger"></span>
				</div>
			</div>
			<div class="form-group row">
				<div class="col-1">
					<input type="submit" value="Create" class="btn btn-outline-primary" />
				</div>
				<div>
					<input type="reset" value="Reset" class="btn btn-outline-info" />
				</div>
			</div>
		</form>
	</div>
</div>

<div>
	<a asp-action="Index">Back to list</a>
</div>

@section Scripts {
	@{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
