@model TimeKeeping.Models.TimeKeepingFeedback

@{
    ViewData["Title"] = "Create";
}

<h1>Feedback your checkin</h1>

<h4>Please explain the detailed feedback</h4>
<hr />
<div class="row">
    <div class="col-md">
        <form asp-action="Create" asp-controller="TimeKeepingFeedbacks" >

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="CheckinId" />
            <div class="form-group">
                <label class="control-label font-weight-bold">Comments</label>
                <!--  <input asp-for="Reason" class="form-control" /> -->
                <textarea asp-for="Reason" class="form-control" rows="10">
                 </textarea>

                <span asp-validation-for="Reason" class="text-danger"></span>
            </div>
            <!--

            <div class="form-group">
                <label asp-for="Time" class="control-label"></label>
                <input asp-for="Time" class="form-control" />
                <span asp-validation-for="Time" class="text-danger"></span>
            </div>
            -->
            <div class="form-group" hidden>
                <label asp-for="TimeOffRequestStateId" class="control-label"></label>
                <select asp-for="TimeOffRequestStateId" class ="form-control" asp-items="ViewBag.TimeOffRequestStateId" readonly ></select>
            </div>
            <div class="form-group">
                <a asp-action="Index" class="btn btn-primary" style="width:80px">Back</a>
                <input type="submit" value="Create" class="btn btn-primary" style="width:80px"/>
            </div>
        </form>
        @if(@ViewBag.Notify != null)
        {
            <div class="alert alert-success" role="alert">
              @ViewBag.Notify
            </div>
        }
    </div>
</div>
@section Scripts {
    <script>
        document.addEventListener("DOMContentLoaded", function(){
          var notify = '@ViewBag.Notify';
               if(notify == 'Successful'){
                   setTimeout(function() {
                        window.location='Index'
                    }, 5000);
               }
    });
    </script>
}


