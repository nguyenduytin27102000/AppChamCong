@model TimeKeeping.Models.TimeKeepingFeedback

@{
    ViewData["Title"] = "Create";
}

<h1>Feedback your checkin</h1>

<h4>You should explain the reason for the feedback</h4>
<hr />
<div class="row">
    <div class="col-md">
        <form asp-action="Create" asp-controller="TimeKeepingFeedbacks" >
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="TimeKeepingFeedbackId" class="control-label"></label>
                <input asp-for="TimeKeepingFeedbackId" class="form-control" />
                <span asp-validation-for="TimeKeepingFeedbackId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CheckinId" class="control-label"></label>
                 <select asp-for="CheckinId" class ="form-control" asp-items="ViewBag.CheckinId" readonly></select>             
            </div>
            <div class="form-group" hidden>            
               <input asp-for="Active" value="true" class="form-control" />               
            </div>
            <div class="form-group">
                <label asp-for="Reason" class="control-label"></label>
                <!--  <input asp-for="Reason" class="form-control" /> -->
                <textarea asp-for="Reason" class="form-control" rows="10">
                 </textarea>

                <span asp-validation-for="Reason" class="text-danger"></span>
            </div>
            <!--
            <div class="form-group">
                <label asp-for="Time" class="control-label"></label>
                <input asp-for="Time" class="form-control" />
                <span asp-validation-for="Time" class="text-danger"></span>
            </div>
            -->
            <div class="form-group" hidden>
                <label asp-for="TimeOffRequestStateId" class="control-label"></label>
                <select asp-for="TimeOffRequestStateId" class ="form-control" asp-items="ViewBag.TimeOffRequestStateId" readonly ></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-warning" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-primary">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
