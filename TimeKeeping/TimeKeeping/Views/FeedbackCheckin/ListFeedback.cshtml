@model IEnumerable<TimeKeeping.Models.TimeKeepingFeedback>

@{
    ViewData["Title"] = "List feedback for checkin";
}
<style>
        .nut{
            width:160px;
        }

</style>

<h1>List Feedback</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Reason)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Time)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Active)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Checkin)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TimeOffRequestState)
            </th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @item.Reason;
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Time)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Active)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Checkin.CheckinId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TimeOffRequestState.TimeOffRequestStateName)
            </td>
        </tr>
}
    </tbody>
</table>
<div>
    <a asp-action="ListCheckin" class="btn btn-primary nut">Back</a>  
    <a asp-action="Feedback" asp-route-id="@ViewBag.CheckinID" class="btn btn-primary nut">Create Feedback</a>
</div>
