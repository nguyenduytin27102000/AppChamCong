@model IEnumerable<TimeKeeping.Models.TimeKeepingFeedback>

@{
    ViewData["Title"] = "List feedback for checkin";
}

<h1>List Feedback</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Reason)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Time)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Active)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Checkin)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TimeOffRequestState)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @item.Reason;
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Time)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Active)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Checkin.CheckinId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TimeOffRequestState.TimeOffRequestStateName)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.TimeKeepingFeedbackId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.TimeKeepingFeedbackId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.TimeKeepingFeedbackId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
<div>
        <a asp-action="ListCheckin">Back to List checkin</a>
    </div>
