@model TimeKeeping.Models.PersonnelApplyTimeOffPolicy

@{
    ViewData["Title"] = "Edit";
}
<link rel="stylesheet" type="text/css" href="~/css/PersonnelApplyTimeOffPolicieIndex.css">
<link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons">

<img id="logo" src="~/icon/Logo.png" alt="Infodation">
<h1 class="text-center">Edit Personnal Policy</h1>
<hr />
<div class="row">
    <div class="col-md">
        <form asp-action="Edit" asp-controller="PersonnelApplyTimeOffPolicies">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="text" hidden asp-for="PersonnelId" />
            <input type="text" hidden asp-for="TimeOffPolicyId" />
            <div class="form-group">
                <label asp-for="EffectiveDate" class="control-label" style="color: #F74474;"></label>
                <img src="~/icon/bullet.png" alt="bullet" class="bullet">
                <input asp-for="EffectiveDate" class="form-control" />
                <span asp-validation-for="EffectiveDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NumberOfDaysOffLastYear" class="control-label" style="color: #F74474;"></label>
                <img src="~/icon/bullet.png" alt="bullet" class="bullet">
                <input asp-for="NumberOfDaysOffLastYear" class="form-control" />
                <span asp-validation-for="NumberOfDaysOffLastYear" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NumberOfDaysOffStandard" class="control-label" style="color: #F74474;"></label>
                <img src="~/icon/bullet.png" alt="bullet" class="bullet">
                <input asp-for="NumberOfDaysOffStandard" class="form-control" />
                <span asp-validation-for="NumberOfDaysOffStandard" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NumberOfDaysOffSeniority" class="control-label" style="color: #F74474;"></label>
                <img src="~/icon/bullet.png" alt="bullet" class="bullet">
                <input asp-for="NumberOfDaysOffSeniority" class="form-control" />
                <span asp-validation-for="NumberOfDaysOffSeniority" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NumberOfDaysOffOffset" class="control-label" style="color: #F74474;"></label>
                <img src="~/icon/bullet.png" alt="bullet" class="bullet">
                <input asp-for="NumberOfDaysOffOffset" class="form-control" />
                <span asp-validation-for="NumberOfDaysOffOffset" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Note" class="control-label" style="color: #F74474;"></label>
                
                <textarea asp-for="Note" class="form-control" rows="5"> </textarea>
                <span asp-validation-for="Note" class="text-danger"></span>
            </div>
            <div class="form-group" hidden>
                <label asp-for="Active" class="control-label" style="color: #F74474;"></label>
               
                <input asp-for="Active" value ="true" class="form-control" />
                <span asp-validation-for="Active" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn bt" />
                <a asp-action="Index">Back to List</a>
            </div>
        </form>
    </div>
</div>


    


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
