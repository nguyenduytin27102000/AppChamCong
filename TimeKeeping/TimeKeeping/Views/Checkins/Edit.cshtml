@model TimeKeeping.Models.Checkin

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Checkin</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="CheckinId" />
            <div class="form-group">
                <label asp-for="PersonnelId" class="control-label"></label>
                <select asp-for="PersonnelId" class="form-control" asp-items="ViewBag.PersonnelId" readonly></select>
                <span asp-validation-for="PersonnelId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label for="LastName"  class="control-label">Personnal</label>
                <input type="text" id="LastName" class="form-control" value="@ViewBag.LastName" readonly></input>           
            </div>
            <input type="text" value="true" asp-for="Active" hidden/>
            <div class="form-group">
                <label asp-for="Time" class="control-label"></label>
                <input asp-for="Time" class="form-control" />
                <span asp-validation-for="Time" class="text-danger"></span>
            </div>
            <div class="form-group" hidden>
                
                <input type="text" id="id" name="id" class="form-control" value="@ViewBag.id" readonly></input>           
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-warning" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" asp-controller="TimeKeepingFeedbacks" class="btn btn-primary">Back to List Feedback</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
